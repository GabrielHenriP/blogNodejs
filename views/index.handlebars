<div class="jumbotron">
  <h1 class="display-4">Bem Vindo ao Blog do Node</h1>
  
  <a class="btn btn-primary btn-lg mt-4" href="#" role="button">Crie uma Conta</a>
</div>
<hr>
<h2>Postagens recentes</h2>
{{#each postagens}}
    <div class="card">
        <div class="card-body">
            <h2>{{titulo}}</h2>
            <p>{{descricao}}</p>
            <a href="/postagem/{{slug}}"><button class="btn btn-success" >Leia mais</button></a>
            <hr>
            <small>Categoria: {{categoria.nome}}</small>
            <small>Data de Publicação: <strong>{{data}}</strong></small>
        </div>
    </div>
{{else}}
    <h3>Nenhuma Postagem</h3>
{{/each}}