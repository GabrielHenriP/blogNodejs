<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add"><button  class="btn btn-success" >Nova Categoria</button></a>
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{nome}}</h3>
            <p>Slug: {{slug}}</p>
            <p>Data de criação: {{date}}</p>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success" >Editar Categoria</button></a>
            <a href="/admin/categorias/deletar/{{_id}}">
                <button class="btn btn-danger my-2">Apagar categoria</button>
            </a>
            
        </div>
    </div>
{{else}}
    <h2 class="mt-4" >Nenhuma Categoria registrada</h2>
{{/each}}