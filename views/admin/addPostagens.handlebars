{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <h3>Nova Postagem</h3>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" >
            <label for="slug">Slug: </label>
            <input type="text" name="slug"
            class="form-control">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao"
            class="form-control">
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" cols="30" rows="10" class="form-control" ></textarea>
            <label for="categoria">Categoria: </label>
            <select class="custom-select" name="categoria" id="">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-3" >Criar Postagem</button>
        </form>
    </div>
</div>